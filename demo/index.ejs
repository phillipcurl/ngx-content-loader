        <pre class="bg-light-gray br0 pa3 bl bw3 b--green"><code>import { NgModule } from '@angular/core';
import { ContentLoaderModule } from 'ngx-content-loader';

@NgModule({
  imports: [
    ...,
    ContentLoaderModule,
    ...
  ]
})
export class AppModule {}</code></pre>
